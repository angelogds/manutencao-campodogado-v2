<% layout('layout') %>

<style>
  .grid{ display:grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap:14px; }
  .card{
    background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:16px;
    box-shadow:0 10px 26px rgba(0,0,0,.06);
  }
  .k{ color:#6b7280; font-weight:900; font-size:12px; letter-spacing:.06em; }
  .v{ font-size:34px; font-weight:900; margin-top:6px; color:#111827; }
  .btn{
    display:inline-flex; align-items:center; justify-content:center;
    padding:10px 12px; border-radius:12px; border:1px solid #e5e7eb; background:#fff;
    text-decoration:none; font-weight:900; color:#111827; height:40px;
  }
  .btn.primary{ background:#0b6b3a; border-color:#0b6b3a; color:#fff; }
  .row-actions{ display:flex; gap:10px; margin-top:12px; flex-wrap:wrap; }
  .muted{ color:#6b7280; }
  .span2{ grid-column: span 2; }
  @media(max-width: 900px){
    .grid{ grid-template-columns:1fr; }
    .span2{ grid-column: span 1; }
  }
</style>

<h1>Dashboard</h1>
<p class="muted" style="margin-top:-6px;">
  Bem-vindo, <strong><%= user?.nome || "Usuário" %></strong>.
  Perfil: <strong><%= user?.role || user?.perfil || "USER" %></strong>
</p>

<div class="grid">

  <!-- OS -->
  <div class="card">
    <div class="k">OS ABERTAS</div>
    <div class="v"><%= counters.os_abertas %></div>
    <div class="row-actions">
      <a class="btn" href="/os?status=ABERTA">Ver</a>
      <a class="btn primary" href="/os/new">Abrir OS</a>
    </div>
  </div>

  <div class="card">
    <div class="k">OS EM ANDAMENTO</div>
    <div class="v"><%= counters.os_andamento %></div>
    <div class="row-actions">
      <a class="btn" href="/os?status=ANDAMENTO">Acompanhar</a>
    </div>
  </div>

  <div class="card">
    <div class="k">OS CONCLUÍDAS</div>
    <div class="v"><%= counters.os_concluidas %></div>
    <div class="row-actions">
      <a class="btn" href="/os?status=CONCLUIDA">Histórico</a>
    </div>
  </div>

  <!-- COMPRAS -->
  <div class="card">
    <div class="k">SOLICITAÇÕES ABERTAS</div>
    <div class="v"><%= counters.solicitacoes_abertas %></div>
    <div class="row-actions">
      <a class="btn" href="/compras?status=ABERTA">Ver</a>
      <a class="btn primary" href="/compras/new">Nova Solicitação</a>
    </div>
  </div>

  <div class="card">
    <div class="k">SOLICITAÇÕES EM COTAÇÃO</div>
    <div class="v"><%= counters.solicitacoes_em_cotacao %></div>
    <div class="row-actions">
      <a class="btn" href="/compras?status=EM_COTACAO">Ver</a>
    </div>
  </div>

  <div class="card">
    <div class="k">SOLICITAÇÕES APROVADAS</div>
    <div class="v"><%= counters.solicitacoes_aprovadas %></div>
    <div class="row-actions">
      <a class="btn" href="/compras?status=APROVADA">Ver</a>
    </div>
  </div>

  <!-- ESTOQUE -->
  <div class="card span2">
    <div class="k">ESTOQUE</div>
    <div style="display:grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap:10px; margin-top:10px;">
      <div>
        <div class="muted" style="font-weight:900; font-size:12px;">Itens cadastrados</div>
        <div style="font-size:28px; font-weight:900;"><%= counters.estoque_itens %></div>
      </div>
      <div>
        <div class="muted" style="font-weight:900; font-size:12px;">Qtd total</div>
        <div style="font-size:28px; font-weight:900;"><%= counters.estoque_total_qtd %></div>
      </div>
      <div>
        <div class="muted" style="font-weight:900; font-size:12px;">Valor total (R$)</div>
        <div style="font-size:28px; font-weight:900;">
          <%= Number(counters.estoque_total_valor || 0).toFixed(2) %>
        </div>
      </div>
    </div>

    <div class="row-actions">
      <a class="btn" href="/estoque">Ver Estoque</a>
      <a class="btn" href="/compras">Ir para Compras</a>
    </div>
  </div>

  <!-- ADMIN -->
  <div class="card">
    <div class="k">ADMIN</div>
    <div style="margin-top:10px;">
      <% if ((user?.role || user?.perfil) === "ADMIN") { %>
        <a class="btn" href="/admin/users">Usuários</a>
      <% } else { %>
        <span class="muted">Sem acesso</span>
      <% } %>
    </div>
    <div class="muted" style="font-size:12px; margin-top:10px;">
      Cotações total: <strong><%= counters.cotacoes_total %></strong>
    </div>
  </div>

</div>
