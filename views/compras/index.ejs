<% const itens = (typeof itens !== "undefined" ? itens : []); %>

<% layout('layout') %>

<style>
  .page-head{
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap:14px;
    margin-bottom:14px;
  }
  .actions{ display:flex; gap:10px; flex-wrap:wrap; }
  .btn{
    display:inline-flex;
    align-items:center;
    gap:8px;
    padding:10px 12px;
    border-radius:12px;
    border:1px solid #e5e7eb;
    background:#fff;
    text-decoration:none;
    font-weight:900;
    color:#111827;
    cursor:pointer;
  }
  .btn.primary{ background:#0b6b3a; border-color:#0b6b3a; color:#fff; }
  .btn:hover{ filter:brightness(.98); }
  .table{
    width:100%;
    border-collapse:separate;
    border-spacing:0;
    background:#fff;
    border:1px solid #e5e7eb;
    border-radius:16px;
    overflow:hidden;
    box-shadow:0 10px 26px rgba(0,0,0,.06);
  }
  .table th, .table td{
    padding:12px 12px;
    border-bottom:1px solid #eef2f7;
    text-align:left;
    font-size:14px;
  }
  .table th{
    font-size:13px;
    color:#6b7280;
    font-weight:900;
    background:#f9fafb;
  }
  .badge{
    display:inline-block;
    padding:4px 10px;
    border-radius:999px;
    font-weight:900;
    font-size:12px;
    border:1px solid #e5e7eb;
    background:#fff;
  }
  .badge.pendente{ border-color:rgba(245,158,11,.35); background:rgba(245,158,11,.12); }
  .badge.aprovada{ border-color:rgba(11,107,58,.35); background:rgba(11,107,58,.10); }
  .badge.cancelada{ border-color:rgba(220,38,38,.35); background:rgba(220,38,38,.10); }
  .muted{ color:#6b7280; }
</style>

<div class="page-head">
  <div>
    <h1 style="margin:0;">Compras</h1>
    <div class="muted" style="margin-top:6px;">Solicita√ß√µes e acompanhamento.</div>
  </div>

  <div class="actions">
    <a class="btn" href="/compras">üìã Todas</a>
    <a class="btn" href="/compras?status=PENDENTE">‚è≥ Pendentes</a>
    <a class="btn" href="/compras?status=APROVADA">‚úÖ Aprovadas</a>
    <a class="btn primary" href="/compras/new">‚ûï Nova Solicita√ß√£o</a>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th style="width:90px;">ID</th>
      <th>Descri√ß√£o</th>
      <th style="width:140px;">Prioridade</th>
      <th style="width:140px;">Status</th>
      <th style="width:210px;">Data</th>
    </tr>
  </thead>

  <tbody>
    <% if (!itens || itens.length === 0) { %>
      <tr>
        <td colspan="5" class="muted">Nenhuma solicita√ß√£o encontrada.</td>
      </tr>
    <% } else { %>
      <% itens.forEach(i => { %>
        <tr>
          <td>#<%= i.id %></td>
          <td><%= i.descricao %></td>
          <td><%= i.prioridade || "NORMAL" %></td>
          <td>
            <% const st = (i.status || "PENDENTE").toUpperCase(); %>
            <span class="badge
              <%= st === "PENDENTE" ? "pendente" : (st === "APROVADA" ? "aprovada" : (st === "CANCELADA" ? "cancelada" : "")) %>
            ">
              <%= st %>
            </span>
          </td>
          <td><%= i.created_at || "-" %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
