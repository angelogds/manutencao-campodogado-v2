<% layout("layout") %>

<section class="card">
  <h1>Login</h1>
  <p class="muted">Acesse o sistema de manutenção.</p>

  <form method="POST" action="/login" class="form">
    <label>Email</label>
    <input type="email" name="email" required placeholder="admin@campodogado.local" />

    <label>Senha</label>
    <input type="password" name="password" required placeholder="••••••••" />

    <button class="btn primary" type="submit">Entrar</button>
  </form>

  <div class="hint">
    <strong>Admin padrão:</strong> admin@campodogado.local / admin123
  </div>
</section>
