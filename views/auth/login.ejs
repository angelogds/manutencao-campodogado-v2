<section class="auth">
  <div class="card auth-card">
    <h1>Entrar</h1>
    <p class="muted">Acesse o sistema de manutenção.</p>

    <form method="POST" action="/login" class="form">
      <label class="label">Email</label>
      <input class="input" type="email" name="email" required placeholder="admin@campodogado.local" />

      <label class="label">Senha</label>
      <input class="input" type="password" name="password" required placeholder="••••••••" />

      <button class="btn btn-primary" type="submit">Entrar</button>

      <div class="hint">
        <strong>Admin padrão:</strong> admin@campodogado.local / admin123
      </div>
    </form>
  </div>
</section>
