<% layout('layout') %>

<style>
  .login-page{
    min-height: calc(100vh - 70px);
    display:flex;
    align-items:center;
    justify-content:center;
    background:
      linear-gradient(
        rgba(11,107,58,.88),
        rgba(11,107,58,.88)
      ),
      url("/img/login-bg.jpg") center/cover no-repeat;
  }

  .login-card{
    width:100%;
    max-width:420px;
    background:#ffffff;
    border-radius:18px;
    box-shadow: 0 25px 60px rgba(0,0,0,.25);
    padding:26px 24px 24px;
  }

  .login-title{
    font-size:24px;
    font-weight:900;
    color:#0b6b3a;
    margin:0 0 6px;
    text-align:center;
  }

  .login-sub{
    text-align:center;
    color:#6b7280;
    font-size:14px;
    margin-bottom:20px;
  }

  .form-group{
    display:flex;
    flex-direction:column;
    gap:6px;
    margin-bottom:14px;
  }

  .form-group label{
    font-size:13px;
    font-weight:800;
    color:#374151;
  }

  .form-group input{
    padding:11px 12px;
    border-radius:12px;
    border:1px solid #d1d5db;
    font-size:14px;
    outline:none;
  }

  .form-group input:focus{
    border-color:#0b6b3a;
    box-shadow: 0 0 0 3px rgba(11,107,58,.12);
  }

  .login-actions{
    margin-top:18px;
  }

  .login-actions button{
    width:100%;
    padding:12px;
    border-radius:14px;
    border:none;
    background:#0b6b3a;
    color:#ffffff;
    font-weight:900;
    font-size:15px;
    cursor:pointer;
  }

  .login-actions button:hover{
    background:#095c32;
  }

  .login-footer{
    margin-top:16px;
    text-align:center;
    font-size:12px;
    color:#6b7280;
  }

  .login-footer strong{
    color:#0b6b3a;
  }

  @media (max-width: 520px){
    .login-card{
      margin:0 12px;
    }
  }
</style>

<section class="login-page">

  <div class="login-card">

    <h1 class="login-title">Entrar</h1>
    <p class="login-sub">
      Acesse o sistema de manutenção industrial
    </p>

    <form method="POST" action="/login">

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="admin@campodogado.local"
          required
          autofocus
        />
      </div>

      <div class="form-group">
        <label for="password">Senha</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="••••••••"
          required
        />
      </div>

      <div class="login-actions">
        <button type="submit">
          Entrar
        </button>
      </div>

    </form>

    <div class="login-footer">
      Manutenção Industrial • <strong>Campo do Gado</strong><br/>
      Sistema V2
    </div>

  </div>

</section>
