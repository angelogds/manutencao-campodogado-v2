<aside style="
  width:260px; background:linear-gradient(180deg, #0b6b3a, #07502c);
  color:#fff; padding:16px; border-right:1px solid rgba(255,255,255,.08);
  position:relative;
">
  <div style="display:flex; align-items:center; gap:10px; margin-bottom:16px;">
    <div style="width:36px; height:36px; border-radius:10px; background:rgba(255,255,255,.14); display:flex; align-items:center; justify-content:center; font-weight:900;">
      CG
    </div>
    <div style="font-weight:900;">Campo do Gado</div>
  </div>

  <nav style="display:flex; flex-direction:column; gap:10px;">
    <a href="/dashboard" style="color:#fff; text-decoration:none; padding:10px 12px; border-radius:12px; background:rgba(255,255,255,.10); font-weight:800;">Dashboard</a>
    <a href="/os" style="color:#fff; text-decoration:none; padding:10px 12px; border-radius:12px; background:rgba(255,255,255,.06); font-weight:800;">Ordens de Serviço</a>
    <a href="/compras" style="color:#fff; text-decoration:none; padding:10px 12px; border-radius:12px; background:rgba(255,255,255,.06); font-weight:800;">Compras (Inbox)</a>
    <a href="/estoque" style="color:#fff; text-decoration:none; padding:10px 12px; border-radius:12px; background:rgba(255,255,255,.06); font-weight:800;">Estoque</a>

    <% if ((user?.role || user?.perfil) === "ADMIN") { %>
      <div style="margin-top:10px; opacity:.9; font-weight:900; font-size:12px;">ADMIN</div>
      <a href="/admin/users" style="color:#fff; text-decoration:none; padding:10px 12px; border-radius:12px; background:rgba(255,255,255,.06); font-weight:800;">Usuários</a>
    <% } %>
  </nav>

  <div style="position:absolute; left:16px; bottom:16px; opacity:.9; font-size:12px;">
    © 2026 Campo do Gado
  </div>
</aside>
